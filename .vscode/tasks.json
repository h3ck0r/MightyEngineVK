{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lint C++",
            "type": "shell",
            "command": "python",
            "args": [
                "C:\\Users\\andrew\\Documents\\cpplint.py",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        }
    ]
}
