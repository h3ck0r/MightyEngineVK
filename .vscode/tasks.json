{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lint C++",
            "type": "shell",
            "command": "python",
            "args": [
                "C:\\Users\\andrew\\Documents\\cpplint.py",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        },
         {
            "label": "Build VulkanEngine Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/out/build/Clang MS",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}
